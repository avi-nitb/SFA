<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <TextView
        android:id="@+id/tv_noreason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_check_box_outline_blank_black_24dp"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:fontFamily="@font/lato_regular"
        android:padding="5dp"/>

    <TextView
        android:layout_marginTop="@dimen/dim_8"
        android:layout_marginBottom="@dimen/dim_8"
        android:id="@+id/noreason_header"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lato_bold"
        android:text="@string/label_why_enter_reason_below"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/text_size_large"/>


    <android.support.v7.widget.AppCompatEditText
        android:visibility="visible"
        android:id="@+id/whyNoOrder_TextInputEditText"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_100"
        android:gravity="start"
        android:background="@drawable/shape_rectangle"
        android:padding="@dimen/dim_10"
        android:textColor="@color/black"/>
