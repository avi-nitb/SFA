<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_gradient_bg"
    tools:context="in.etaminepgg.sfa.Activities.splashActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">
        <ImageView
            android:id="@+id/logo"
            android:layout_above="@id/tv_title"
            android:layout_gravity="center"
            android:layout_width="@dimen/dim_180"
            android:layout_height="@dimen/dim_130"
            android:adjustViewBounds="true"
            android:src="@drawable/logo_transparent"/>

        <TextView
            android:layout_centerInParent="true"
            android:id="@+id/tv_title"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sales Force Automation"
            android:textSize="@dimen/dim_28"
            android:fontFamily="@font/lato_bold"
            android:textStyle="bold"
            android:textColor="@color/white"/>

    </LinearLayout>


    <TextView
        android:layout_marginBottom="15dp"
        android:textAlignment="center"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lato_bold"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_medium"
        android:text="Powered by Etamine PGG India Pvt Ltd."/>
</RelativeLayout>
