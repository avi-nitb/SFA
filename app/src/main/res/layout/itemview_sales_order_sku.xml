<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/skuItemView_ConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/skuPhoto_ImageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_tumbler"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="8dp"/>

    <TextView
        android:id="@+id/skuName_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tumbler"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="@dimen/text_size_small"
        app:layout_constraintBottom_toTopOf="@+id/skuPrice_TextView"
        app:layout_constraintHorizontal_bias="0.02"
        app:layout_constraintLeft_toRightOf="@+id/skuPhoto_ImageView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/skuPrice_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="20dp"
        android:text="Rs.250/-"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="@dimen/text_size_small"
        app:layout_constraintBottom_toTopOf="@+id/sku_SO_Attr_TextView"
        app:layout_constraintHorizontal_bias="0.02"
        app:layout_constraintLeft_toRightOf="@+id/skuPhoto_ImageView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/skuName_TextView"/>

    <TextView
        android:layout_marginBottom="@dimen/four_dp"
        android:id="@+id/sku_SO_Attr_TextView"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:text="Attribute Set"
        android:textSize="@dimen/text_size"
        app:layout_constraintBottom_toTopOf="@+id/separator"
        app:layout_constraintHorizontal_bias="0.02"
        app:layout_constraintLeft_toRightOf="@+id/skuPhoto_ImageView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/skuPrice_TextView"
        app:layout_constraintVertical_bias="0.9"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/skuQuantity_TextInputLayout"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:minWidth="60dp"
        android:textColorHint="#827717"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/skuName_TextView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/skuQuantity_TextInputEditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:digits="0123456789"
            android:hint="Qty"
            android:inputType="number"
            android:textSize="14dp"
            android:textStyle="bold"/>

    </android.support.design.widget.TextInputLayout>

    <ImageButton
        app:layout_constraintVertical_bias="0.2"
        android:id="@+id/deleteSKU_ImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_delete"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/skuQuantity_TextInputLayout"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:layout_marginTop="@dimen/four_dp"
        android:id="@+id/separator"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/colorPrimaryDark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sku_SO_Attr_TextView"/>

</android.support.constraint.ConstraintLayout>